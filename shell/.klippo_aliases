# vim: set ft=sh :

alias k='sudo systemctl start klipper.service'
alias kf='echo "FIRMWARE_RESTART" > /tmp/printer'
alias kr='sudo systemctl restart klipper.service'
alias ks='sudo systemctl stop klipper.service'
alias kk='sudo systemctl --signal 9 kill klipper.service && sudo systemctl stop klipper.service'

alias l1='tail -f -n +1 ~/.local/share/klippo/logs/klippy.log'
alias l2='tail -f -n +1 ~/.local/share/klippo/logs/kgui.log'
alias l3='tail -f -n +1 ~/.local/share/klippo/logs/cura_connection.log'

CDPATH=:~/klippo:~/klippo/klippy:~/klippo/klippy/extras:~/klippo/klippy/parallel_extras
